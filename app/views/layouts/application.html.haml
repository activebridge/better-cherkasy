!!!
%html{"ng-app" => "betterCherkasy"}
  %head
    %title BetterCherkasy
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .header
      .logo
        = image_tag 'logo.png'
      .nav-bar{"ng-controller" => "NavBarCtrl"}
        %ng-include(src="'#{asset_path('nav_bar.html')}'")

      .alert.fade{"active-class" => "in alert", :duration => "0", "flash-alert" => "", class: "display-none"}
        %button.close{"ng-click" => "hide();", :type => "button"} &times;
        %span.alert-message {{flash.message}}
    %div{"ng-view" => ""}
