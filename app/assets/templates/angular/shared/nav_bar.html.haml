.row
  .nine.columns
    %script(type='text/ng-template' id='popover')
      %ul
        %li(ng-repeat='action in actions' ng-click='update()') {{action.name}}
    %button(ns-popover
            ns-popover-template='popover'
            ns-popover-trigger='click'
            ns-popover-hide-on-inside-click='true'
            class='button-primary') {{selected_action}}
  .three.columns.socials(ng-show='navBar.showSignInButton')
    = link_to '', 'ng-click' => 'loginWithFacebook()' do
      = fa_icon 'facebook 2x'
    = link_to '', 'ng-click' => 'loginWithVkontakte()' do
      = fa_icon 'vk 2x'
    = link_to '', 'ng-click' => 'loginWithOk()' do
      = fa_icon 'odnoklassniki 2x'
    %input{'type'=>'hidden', 'ng-model'=>'okAuthToken', 'id'=>'auth_token'}
  .three.columns.socials(ng-show='!navBar.showSignInButton')
    = link_to '', 'ng-click' => 'logOut()' do
      = fa_icon 'sign-out 2x'
