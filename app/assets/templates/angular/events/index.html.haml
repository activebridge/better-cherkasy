.new-event-link{'ng-click' => 'openModal()', 'ng-show' => 'userSignedIn()'}
  %h3 Запропонувати
%ul.events
  %li.jumbotron{'ng-repeat' => 'event in events'}
    .creator
      .avatar
        <img src="{{event.creator.avatar_url}}"/>
      .name
        {{event.creator.name}}
    .event
      .row.headline
        {{event.headline}}
      .row.date
        {{event.date}} {{event.time}}
      .row
        {{event.description}}
      .actions.btn-group.btn-group-xs
        .rating{'ng-class' => "event.rating > 0 ? 'green' : 'red' "}
          {{event.rating}}
        %button.btn.btn-default{'ng-click' => 'down(event, $index)', :type => 'button', 'ng-show' => 'userSignedIn()'}
          %span.glyphicon.glyphicon-thumbs-down
        %button.btn.btn-default{'ng-click' => 'up(event, $index)', :type => 'button', 'ng-show' => 'userSignedIn()'}
          %span.glyphicon.glyphicon-thumbs-up
        %button.btn.btn-default{'ng-click' => 'delete(event.id, $index)', :type => 'button', 'ng-show' => 'userSignedIn()'}
          %span.glyphicon.glyphicon-trash
    .clear

#new-event-modal.hidden
  .modal-header
    %h3 Запропонувати
  .modal-body
    %form{'ng-submit' => 'add()'}
      %div
        .title Заголовок:
        .input-group
          %input.form-control{'ng-model' => 'newEvent.headline'}/
      %div
        .title Опис:
        .input-group
          %textarea{'ng-model' => 'newEvent.description'}
      %div
        .title Дата:
        .input-group
          %input.datepicker.form-control{:type => 'text', 'ng-model' => 'newEvent.date'}
            %span.input-group-addon
              %i.glyphicon.glyphicon-calendar.blue

      %div
        .title Час:
        .input-group.bootstrap-timepicker
          %input.timepicker.form-control{:type => 'text', 'ng-model' => 'newEvent.time'}
            %span.input-group-addon
              .glyphicon.glyphicon-time.blue

      %div
        .title  
        %button.btn.btn-primary{:type => 'submit'} Додати
