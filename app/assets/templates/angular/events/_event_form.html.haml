.row
  %input(ng-model='newEvent.headline' placeholder='Заголовок' type='text')
.row
  .col-md-2.col-xs-12.title Опис:
  .col-md-10.col-xs-12
    %div{'ckeditor' => 'options', 'ng-model' => 'newEvent.description'}
.row
  %datepicker
    -#%input(ng-model='date' type='text')
  .col-md-2.col-xs-12.title Дата:
  .col-md-10.col-xs-12
  %input.datepicker.form-control{:type => 'text', 'ng-model' => 'newEvent.date'}
    %span.input-group-addon
      %i.glyphicon.glyphicon-calendar.blue

.row
  .col-md-2.col-xs-12.title Час:
  .col-md-10.col-xs-12
    .input-group.bootstrap-timepicker
      %input.timepicker.form-control{:type => 'text', 'ng-model' => 'newEvent.time'}
        %span.input-group-addon
          .glyphicon.glyphicon-time.blue

.row
  .col-md-2.col-xs-12.title Теги:
  .col-md-10.col-xs-12
    %tags-input{'ng-model' => 'newEvent.tags', 'display-property' => 'name'}
      %auto-complete{'source' => 'loadTags($query)'}

.row
  .col-md-2.col-xs-12.title Збераємось:
  .col-md-10.col-xs-12
    #map-canvas
